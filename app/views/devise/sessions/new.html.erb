<h2>Log in</h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'},
  wrapper: :horizontal_form,
  wrapper_mappings: {
    boolean: :horizontal_boolean
    }) do |f| %>
    <%= f.error_notification %>
    <%= f.input :email, autofocus: true, label:'Email', placeholder: 'sample@email.com' %>
    <%= f.input :password, autocomplete: "off", wrapper_html: {id:'password'} %>

  <% if devise_mapping.rememberable? -%>
      <%= f.input :remember_me, as: :boolean %>
  <% end -%>

  <div class="form-actions col-sm-offset-3">
    <!--<%= f.submit 'Log in' %> -->
    <%= f.button :submit, "Log In" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>